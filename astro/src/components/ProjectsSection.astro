---
import {Picture} from 'astro:assets'
import EcommerceDashboard from '/src/images/projects/project-1.png'
import SaaSLandingPage from '/src/images/projects/project-2.png'
import DevToolsChromeExtension from '/src/images/projects/project-3.png'


const heading = "My Projects";
const cta = { text: 'View All', href: '/projects' };

import projectsData from '../data/projects.json';
let projects = projectsData.projects;
---
<section>
  <div class="section-header">
      <h2>
        {heading}
      </h2>
      <a href={cta.href}>{cta.text}</a>
  </div>

  <div class="projects-container">
    {projects.forEach(project => (
        
        console.log(typeof JSON.parse(JSON.stringify(project)).image)
        // <div class="card">
        //     <Picture layout="full-width" formats={['avif', 'webp']} src={(project.image)} alt={project.alt} />
        //     <h3><a href={project.liveSiteURL}>{project.title}</a></h3>
        // </div>
    ))}
  </div>
</section>

<style>
   a {
        text-decoration: none;
        font-weight: 900;
    }

    .projects-container {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: repeat(auto-fill, minmax(100px, 1fr));
        
        gap: 2rem;
        
        .card {
          transition: transform 0.3s;
          display: flex;
          flex-direction: column;


            img {
              width: 100%;
              height: 100%;
            }
          }
          
        
        

        h3 {
          margin-top: 20px;
        }
        
        a {
            font-weight: 600;
            text-decoration: none;
        }
        
        @media (min-width: 768px) {
            & {
                grid-template-columns: 1fr 1fr 1fr;
            }
            
        
        }
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;

    h2 {
        margin: 0;
        font-weight: 600;
    } 

  }


</style>
